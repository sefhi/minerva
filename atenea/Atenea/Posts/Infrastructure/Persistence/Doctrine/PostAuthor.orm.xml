<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Atenea\Posts\Domain\PostAuthor" table="author">
    <id name="id" type="author_id" column="id">
      <generator strategy="IDENTITY"/>
    </id>

    <embedded name="name" class="Atenea\Posts\Domain\PostAuthorName" use-column-prefix="false" />
    <embedded name="username" class="Atenea\Posts\Domain\PostAuthorUsername" use-column-prefix="false" />
    <embedded name="website" class="Atenea\Posts\Domain\PostAuthorWebsite" use-column-prefix="false" />
    <embedded name="email" class="Atenea\Posts\Domain\PostAuthorEmail" use-column-prefix="false" />

  </entity>
</doctrine-mapping>
