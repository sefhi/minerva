<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Auth\Clients\Domain\Token\Token" table="auth_token">
        <id name="id" type="uuid" length="36" column="id" />

        <field name="expiry" type="date_immutable"/>
        <field name="scopes" type="auth_scopes" nullable="true"/>
        <field name="revoked" type="boolean"/>
        <many-to-one field="user" target-entity="Auth\Clients\Domain\User\User" fetch="EAGER">
            <join-columns>
                <join-column name="user_id"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="client" target-entity="Auth\Clients\Domain\Client\Client" fetch="EAGER">
            <join-columns>
                <join-column name="client_id"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
